doctype html
html
  head
    title Asset Categories
    link(rel='stylesheet', href='/styles/style.css')
    // DataTables CSS
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css')
  body
    div.header-container.text-center.my-4
     h1.display-5.fw-bold.text-white Asset Category List
    div.Flex-between
     a.btn.btn-secondary.d-inline-flex.align-items-center.gap-2(href='/')
      i.fas.fa-arrow-left
         |       Back to Home

     a.btn.btn-primary.d-inline-flex.align-items-center.gap-2(href='/assetCategories/add')
      i.fas.fa-plus
         |       Add Asset Categroy
    table.table.table-bordered#categoryTable
      thead
        tr
          th ID
          th Name
          th Description
          th Actions
      tbody
        each assetCategory in assetCategories
          tr
            td= assetCategory.id
            td= assetCategory.name
            td= assetCategory.description || '--'
            td
              a.btn.btn-sm.btn-warning(href=`/assetCategories/edit/${assetCategory.id}`) ✏️
              a.btn.btn-sm.btn-danger(href=`/assetCategories/delete/${assetCategory.id}`) 🗑️

    script(src='https://code.jquery.com/jquery-3.7.0.min.js')
    script(src='https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js')
    script.
      $(document).ready(function() {
        $('#categoryTable').DataTable(); // Initialize DataTable for asset categories table
      });
