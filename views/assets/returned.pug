doctype html
html
  head
    title Return Asset
    link(rel='stylesheet', href='/styles/style.css')
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  body
   a.btn.btn-secondary.d-inline-flex.align-items-center.gap-2(href='/')
      i.fas.fa-arrow-left
         |       Back to Home
  div.Flex-center
   div.Form-Background
    h1 Return Asset
    form(action='/assets/return' method='POST')
      div.form-group
        label(for='assetId') Asset
        select(name='assetId' required)
          each asset in assignedAssets
            option(value=asset.id) #{asset.assetName} - #{asset.serialNumber} (Assigned to #{asset.Employee.name})
      
      div.form-group
        label(for='returnReason') Reason for Return
        select(name='returnReason' required)
          option(value='Upgrade') Upgrade
          option(value='Repair') Repair
          option(value='Resignation') Resignation
          option(value='Other') Other
      div.form-group
       button(type='submit') Return Asset
