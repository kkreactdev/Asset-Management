doctype html
html
  head
    title Asset List
    link(rel='stylesheet', href='/styles/style.css')
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css')
  body
    div.header-container.text-center.my-4
     h1.display-5.fw-bold.text-white Asset List
    div.Flex-between
     a.btn.btn-secondary.d-inline-flex.align-items-center.gap-2(href='/')
      i.fas.fa-arrow-left
         |       Back to Home

     a.btn.btn-primary.d-inline-flex.align-items-center.gap-2(href='/assets/add')
      i.fas.fa-plus
         |       Add Asset

    table.table.table-bordered#assetTable
      thead
        tr
          th ID
          th Name
          th Serial No
          th Category
          th Purchase Date
          th Price
          th Branch
          th Status
          th AssetCondition
          th Assigned To
          th Scrapped
          th Return Reason
          th Actions
      tbody
        each asset in assets
          tr
            td= asset.id
            td= asset.assetName
            td= asset.serialNumber
            td= asset.AssetCategory ? asset.AssetCategory.name : 'â€”'
            td= asset.purchaseDate.toISOString().substring(0, 10)
            td= asset.purchasePrice
            td= asset.branch
            td= asset.status
            td= asset.condition
            td= asset.Employee ? asset.Employee.name : 'â€”'
            td= asset.isScrapped ? 'Yes' : 'No'
            td= asset.returnReason || 'â€”'
            td
              a.btn.btn-sm.btn-success(href=`/assets/edit/${asset.id}` title='Edit') âœï¸
              a.btn.btn-sm.btn-danger(href=`/assets/delete/${asset.id}` title='Delete') ğŸ—‘ï¸

    script(src='https://code.jquery.com/jquery-3.7.0.min.js')
    script(src='https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js')

    script.
      $(document).ready(function() {
        $('#assetTable').DataTable();
      });
