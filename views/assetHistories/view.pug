doctype html
html
  head
    title= `Asset History - ${asset.assetName}`
    link(rel='stylesheet', href='/styles/style.css')
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  body
   

      a.btn.btn-secondary.d-inline-flex.align-items-center.gap-2(href='/assetHistory')
       i.fas.fa-arrow-left
         |       Back to Asset History
      div.header-container.text-center.my-4
       h1.display-5.fw-bold.text-white Asset History

      h2 #{asset.assetName} (#{asset.serialNumber})

      if history.length
        table
          thead
            tr
              th Date
              th Action
              th Description
          tbody
            each record in history
              tr
                td= new Date(record.date).toLocaleDateString()
                td= record.action
                td= record.description
      else
        p 
         b No history available for this asset.

